        <!-- contract sets form-->
        <record model="ir.ui.view" id="autoservice.sets_form">
            <field name="name">Set form</field>
            <field name="model">autoservice.sets</field>
            <field name="arch" type="xml">
                <form string="Operation set">
                    <header>

                    </header>
                    <sheet>
                        <label for="name" class="oe_edit_only"/>
